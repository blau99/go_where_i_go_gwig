<!-- Validation failure messages -->
<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Favorite #<%= @favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_favorite/<%= @favorite.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @favorite.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for points_of_interest_id -->
      <div class="form-group">
        <label for="points_of_interest_id" class="control-label">
          Points of interest
        </label>

        <%= select_tag(:points_of_interest_id, options_from_collection_for_select(PointsOfInterest.all, :id, :name, @favorite.points_of_interest_id), :class => "form-control") %>
      </div>

      <!-- Label and input for accommodation_id -->
      <div class="form-group">
        <label for="accommodation_id" class="control-label">
          Accommodation
        </label>

        <%= select_tag(:accommodation_id, options_from_collection_for_select(Accommodation.all, :id, :name, @favorite.accommodation_id), :class => "form-control") %>
      </div>

      
      

      <button class="btn btn-warning">
        Update Favorite
      </button>
      or
      <a href="/favorites/<%= @favorite.id %>">Cancel</a>
    </form>
  </div>
</div>
