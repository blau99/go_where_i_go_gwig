<!-- Validation failure messages -->
<% if @accomodation_photo.errors.any? %>
  <% @accomodation_photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Accomodation Photo</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_accomodation_photo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for accommodation_id -->
      <div class="form-group">
        <label for="accommodation_id" class="control-label">
          Accommodation
        </label>

        <%= select_tag(:accommodation_id, options_from_collection_for_select(Accommodation.all, :id, :name, @accomodation_photo.accommodation_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @accomodation_photo.user_id %>">
      </div>

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="control-label">
          Caption
        </label>

        <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @accomodation_photo.caption %></textarea>
      </div>

      <button class="btn btn-success">
        Create Accomodation Photo
      </button>
      or
      <a href="/accomodation_photos">Cancel</a>
    </form>
  </div>
</div>
