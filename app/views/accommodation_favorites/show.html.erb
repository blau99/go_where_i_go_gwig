<div class="page-header">
  <h3>Accommodation Favorite #<%= @accommodation_favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Accommodation</dt>
      <dd>
        <% if @accommodation_favorite.accommodation.present? %>
          <a href="/accommodations/<%= @accommodation_favorite.accommodation_id %>">
            <%= @accommodation_favorite.accommodation.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @accommodation_favorite.user.present? %>
          <a href="/users/<%= @accommodation_favorite.user_id %>">
            <%= @accommodation_favorite.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/accommodation_favorites" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @accommodation_favorite.user %>
        <a href="/accommodation_favorites/<%= @accommodation_favorite.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_accommodation_favorite/<%= @accommodation_favorite.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
