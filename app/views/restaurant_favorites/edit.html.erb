<!-- Validation failure messages -->
<% if @restaurant_favorite.errors.any? %>
  <% @restaurant_favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant Favorite #<%= @restaurant_favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant_favorite/<%= @restaurant_favorite.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @restaurant_favorite.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @restaurant_favorite.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant Favorite
      </button>
      or
      <a href="/restaurant_favorites/<%= @restaurant_favorite.id %>">Cancel</a>
    </form>
  </div>
</div>
