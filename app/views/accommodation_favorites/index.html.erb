<div class="page-header">
  <h1>
    Accommodation favorites
    <a href="/accommodation_favorites/new" class="btn btn-lg btn-success">New Accommodation favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Accommodation</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @accommodation_favorites.each do |accommodation_favorite| %>
      <tr>
        <td>
          <% if accommodation_favorite.accommodation.present? %>
            <a href="/accommodations/<%= accommodation_favorite.accommodation.id %>">
              <%= accommodation_favorite.accommodation.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if accommodation_favorite.user.present? %>
            <a href="/users/<%= accommodation_favorite.user.id %>">
              <%= accommodation_favorite.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/accommodation_favorites/<%= accommodation_favorite.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == accommodation_favorite.user %>
            <a href="/accommodation_favorites/<%= accommodation_favorite.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_accommodation_favorite/<%= accommodation_favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @accommodation_favorites, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
