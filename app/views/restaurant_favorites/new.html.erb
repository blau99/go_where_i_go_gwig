<!-- Validation failure messages -->
<% if @restaurant_favorite.errors.any? %>
  <% @restaurant_favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Restaurant Favorite</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_restaurant_favorite" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @restaurant_favorite.restaurant_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @restaurant_favorite.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Restaurant Favorite
      </button>
      or
      <a href="/restaurant_favorites">Cancel</a>
    </form>
  </div>
</div>
