<div class="page-header">
  <h3>Points Of Interest #<%= @points_of_interest.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @points_of_interest.name %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Admission fee</dt>
      <dd><%= @points_of_interest.admission_fee %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @points_of_interest.image %>" class="img-responsive"></dd>

      <dt>User</dt>
      <dd><%= @points_of_interest.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/points_of_interests" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @points_of_interest.user %>
        <a href="/points_of_interests/<%= @points_of_interest.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_points_of_interest/<%= @points_of_interest.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Points of interest has many points_of_interests_photos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Points Of Interests Photos
      </li>

      <% @points_of_interest.points_of_interests_photos.each do |points_of_interests_photo| %>
        <li class="list-group-item">
          <a href="/points_of_interests_photos/<%= points_of_interests_photo.id %>">
            <%= points_of_interests_photo.points_of_interest_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/points_of_interests_photos/<%= points_of_interests_photo.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/points_of_interests_photos/<%= points_of_interests_photo.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_points_of_interests_photo/<%= points_of_interests_photo.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_points_of_interests_photo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for points_of_interest_id -->
      <div class="form-group">
        <label for="points_of_interest_id" class="control-label">
          Points of interest
        </label>

        <%= select_tag(:points_of_interest_id, options_from_collection_for_select(PointsOfInterest.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="">
      </div>

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="control-label">
          Caption
        </label>

        <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Points Of Interests Photo
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

