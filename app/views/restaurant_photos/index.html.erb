<div class="page-header">
  <h1>
    Restaurant photos
    <a href="/restaurant_photos/new" class="btn btn-lg btn-success">New Restaurant photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>User</th>
        <th>Caption</th>
        <th>Actions</th>
      </tr>

      <% @restaurant_photos.each do |restaurant_photo| %>
      <tr>
        <td>
          <% if restaurant_photo.restaurant.present? %>
            <a href="/restaurants/<%= restaurant_photo.restaurant.id %>">
              <%= restaurant_photo.restaurant.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if restaurant_photo.user.present? %>
            <a href="/users/<%= restaurant_photo.user.id %>">
              <%= restaurant_photo.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= restaurant_photo.caption %></td>
        <td>
          <a href="/restaurant_photos/<%= restaurant_photo.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == restaurant_photo.user %>
            <a href="/restaurant_photos/<%= restaurant_photo.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_restaurant_photo/<%= restaurant_photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurant_photos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
