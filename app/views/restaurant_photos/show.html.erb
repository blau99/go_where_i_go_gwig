<div class="page-header">
  <h3>Restaurant Photo #<%= @restaurant_photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Restaurant</dt>
      <dd>
        <% if @restaurant_photo.restaurant.present? %>
          <a href="/restaurants/<%= @restaurant_photo.restaurant_id %>">
            <%= @restaurant_photo.restaurant.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @restaurant_photo.user.present? %>
          <a href="/users/<%= @restaurant_photo.user_id %>">
            <%= @restaurant_photo.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Caption</dt>
      <dd><%= @restaurant_photo.caption %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restaurant_photos" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @restaurant_photo.user %>
        <a href="/restaurant_photos/<%= @restaurant_photo.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_restaurant_photo/<%= @restaurant_photo.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
