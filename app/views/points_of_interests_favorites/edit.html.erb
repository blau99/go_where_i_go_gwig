<!-- Validation failure messages -->
<% if @points_of_interests_favorite.errors.any? %>
  <% @points_of_interests_favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Points Of Interests Favorite #<%= @points_of_interests_favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_points_of_interests_favorite/<%= @points_of_interests_favorite.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for points_of_interest_id -->
      <div class="form-group">
        <label for="points_of_interest_id" class="control-label">
          Points of interest
        </label>

        <%= select_tag(:points_of_interest_id, options_from_collection_for_select(PointsOfInterest.all, :id, :name, @points_of_interests_favorite.points_of_interest_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @points_of_interests_favorite.user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Points Of Interests Favorite
      </button>
      or
      <a href="/points_of_interests_favorites/<%= @points_of_interests_favorite.id %>">Cancel</a>
    </form>
  </div>
</div>
