<div class="page-header">
  <h1>
    Best dishes
    <a href="/best_dishes/new" class="btn btn-lg btn-success">New Best dish</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @best_dishes.each do |best_dish| %>
      <tr>
        <td>
          <% if best_dish.restaurant.present? %>
            <a href="/restaurants/<%= best_dish.restaurant.id %>">
              <%= best_dish.restaurant.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/best_dishes/<%= best_dish.id %>" class="btn btn-primary">Show</a>
          <a href="/best_dishes/<%= best_dish.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_best_dish/<%= best_dish.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @best_dishes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
