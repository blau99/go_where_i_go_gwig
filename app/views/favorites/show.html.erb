<div class="page-header">
  <h3>Favorite #<%= @favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Restaurant</dt>
      <dd>
        <% if @favorite.restaurant.present? %>
          <a href="/restaurants/<%= @favorite.restaurant_id %>">
            <%= @favorite.restaurant.name %>
          </a>
        <% end %>
      </dd>

      <dt>Points of interest</dt>
      <dd>
        <% if @favorite.points_of_interest.present? %>
          <a href="/points_of_interests/<%= @favorite.points_of_interest_id %>">
            <%= @favorite.points_of_interest.name %>
          </a>
        <% end %>
      </dd>

      <dt>Accommodation</dt>
      <dd>
        <% if @favorite.accommodation.present? %>
          <a href="/accommodations/<%= @favorite.accommodation_id %>">
            <%= @favorite.accommodation.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @favorite.user.present? %>
          <a href="/users/<%= @favorite.user_id %>">
            <%= @favorite.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favorites" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @favorite.user %>
        <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
